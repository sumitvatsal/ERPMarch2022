                    setControlValue(datas[student].ID + "_" + datas[student].attendenceList[i].AttendenceDate, "<span class='badge bg-red'>" + datas[student].attendenceList[i].AttendenceType + "</span>");
                    setControlValue("absent_" + datas[student].ID, aa);
                    aa++;
