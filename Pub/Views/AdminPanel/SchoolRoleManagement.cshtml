    function EnableSubCheckBoxes(val) {
        var a = $(val).closest('tr').next('tr');
        $(a).each(function () {

            $(this).closest('tr').find('input[type=checkbox]').prop('disabled',!val.checked);
            if (!val.checked) {
                $(this).closest('tr').find('input[type=checkbox]').prop('checked', val.checked);
            }
        });
    }

 

   

