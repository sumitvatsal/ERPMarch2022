                    {
                        $("#loader").fadeOut();

                        $("#divSuccessMsg").fadeIn();
                        $("#divSuccessMsg").html("<strong>Success!</strong> " + "School gallery details Updated Successfully");
                        setTimeout(function () {
                            $("#divSuccessMsg").fadeOut();
                            Clearvalues();
