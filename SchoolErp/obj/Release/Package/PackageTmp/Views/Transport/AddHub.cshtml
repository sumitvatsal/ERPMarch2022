        }
        if ($("#HubName").val() == "") {
            alert('Please enter Name.');
            return false;
        }
    }

    function SerachHubplace()
    {
        if ($("#SearchADDRESS").val() == "")
        {
            $("#avneeshLatitude").val("");
            $("#avneeshLongitude").val("");
        }
       

        initialize();



    }
</script>


